<% if current_user %>
  <%= "You are currently logged in as #{current_user.user_name} " %>
<% else %>
  <%= "Please enter your information" %>
<% end %>

<div class="login">
  <h1>This is the login page</h1>
  
  <form action="/authuser" method="post">    <!-- would be cool if we could have a user page with stats for the user / games  -->
    <table> 
      <tr>
        <td><label for="user">User Name</label></td>
        <td><input type="text" name="user_name"/></td>
      </tr>     

      <tr>
        <td><label for="password">Password</label></td>
        <td><input type="password" name="password"/></td>
      </tr>     

      <tr>
        <td><br><input type="Submit" name="Submit Post"/></td>  
      </tr>     

    </table>
  </form>

  <a href="/logout">Logout</a>

  <a href="/">Home</a>

<!--   <a href="/generateuserform">Create Account</a> -->

  <%= erb :_create_user, :layout => false  %>
</div>
