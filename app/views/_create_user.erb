<div class="create_user">
  <h1>Create user</h1>
  
  <form action="/createuser" method="post">  
    <table> 
      <tr>
        <td><label for="new_user">User Name</label></td>
        <td><input type="text" name="post[user_name]"/></td>
      </tr>

      <tr>
        <td><label for="email">Email Address</label></td>
        <td><input type="text" name="post[email]"/></td>
      </tr>       

      <tr>
        <td><label for="password">Password</label></td>
        <td><input type="password" name="post[password]"/></td>
      </tr>  

      <tr>
        <td><label for="password_confirmation">Confirm Password</label></td>
        <td><input type="password" name="password_confirmation"/></td>
      </tr>        

      <tr>
        <td><br><input type="Submit" name="Submit Post"/></td>  
      </tr>     

    </table>
  </form>

  <a href="/">Home</a>

</div>
